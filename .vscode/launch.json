{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_PATH": "${workspaceRoot}/dev/",
            },
            "runtimeArgs": ["--preserve-symlinks"],
            "program": "${workspaceFolder}/backend/src/app.ts",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "--internalStorage.connection.host=localhost",
                "--internalStorage.connection.port=5434",
                "--dev-mode=1"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Elin Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/app.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                "--internalStorage.connection.host=localhost",
                "--internalStorage.connection.port=5432",
                "--components.web.port=33003"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Zitadel Init",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": ["--preserve-symlinks"],
            "program": "${workspaceFolder}/zitadel-bootstrap/src/index.ts",
            "cwd": "${workspaceFolder}/zitadel-bootstrap"
        }
    ]
}