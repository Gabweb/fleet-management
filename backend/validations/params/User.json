{
    "Create": {
        "type": "object",
        "properties": {
            "username": {
                "type": "string"
            },
            "password": {
                "type": "string",
                "minLength": 5
            },
            "name": {
                "type": "string",
                "minLength": 3
            },
            "fullName": {
                "type": "string",
                "minLength": 3
            },
            "email": {
                "type": "string",
                "minLength": 5
            },
            "group": {
                "type": "string"
            },
            "permissions": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "name",
            "password",
            "group",
            "email",
            "permissions",
            "fullName"
        ],
        "additionalProperties": false
    },
    "Update": {
        "type": "object",
        "properties": {
            "id": {
                "type": "number"
            },
            "name": {
                "type": "string"
            },
            "fullName": {
                "type": "string"
            },
            "password": {
                "type": "string"
            },
            "group": {
                "type": "string"
            },
            "email": {
                "type": "string",
                "minLength": 5
            },
            "permissions": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "enabled": {
                "type": "boolean"
            }
        },
        "required": ["id"],
        "additionalProperties": false
    },
    "Delete": {
        "type": "object",
        "properties": {
            "id": {
                "type": "number"
            }
        },
        "required": ["id"],
        "additionalProperties": false
    },
    "Authenticate": {
        "type": "object",
        "properties": {
            "username": {
                "type": "string"
            },
            "password": {
                "type": "string"
            },
            "purpose": {
                "type": "string",
                "enum": ["alexa"]
            },
            "endpoint": {
                "type": "string"
            }
        },
        "required": ["username", "password"],
        "additionalProperties": false
    },
    "Refresh": {
        "type": "object",
        "properties": {
            "refresh_token": {
                "type": "string"
            }
        },
        "required": ["refresh_token"],
        "additionalProperties": false
    }
