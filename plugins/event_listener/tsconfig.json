{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "listEmittedFiles": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
