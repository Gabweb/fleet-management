{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "listEmittedFiles": true,
    "typeRoots": ["./types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
